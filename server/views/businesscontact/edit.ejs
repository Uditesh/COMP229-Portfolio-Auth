<%- include('../Partials/header.ejs'); %>
<div class="wrapper-container">
    <%- include('../Partials/navbar.ejs'); %>
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1>Edit Contact<br>
    
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField" >Name:</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter name" name="name"
                        value=<%=contacts.name %>
                    required>
                </div>
    
                <div class="form-group">
                    <label for="nameTextField" >Number:</label>
                    <input type="text" class="form-control " id="numberTextField" placeholder="Enter number"
                        value=<%=contacts.number %>
                    name="number"
    
                    required>
                </div>
    
                <div class="form-group">
                    <label for="nameTextField" >Email:</label>
                    <input type="text" class="form-control " id="emailTextField" placeholder="Enter email" name="email"
                        value=<%=contacts.email %>
                    required>
                </div>
    
                <button class="btn btn-primary " type="submit">Submit</button>
                <a href="/contacts" class="btn btn-secondary ">Cancel</a>
                <a href="/contacts/delete<%= contacts.id %>" class="btn btn-danger">Delete</a>
    
            </form>
        </div>
    </div>
</div> 
<%- include('../Partials/footer.ejs'); %>